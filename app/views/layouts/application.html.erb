        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <a class="brand" href="/">Yoshi</a>

                    <ul class="nav nav-pills">
                        <li class="<%= 'active' if current_page?(root_path) %>"><a href="/">Unfilled Posts</a></li>
                        <% if signed_in? %>
                        <li class="<%= 'active' if current_page?(my_posts_path) %>"><a href="/my_posts">My Posts</a></li>
                        <li class="<%= 'active' if current_page?(my_interviews_path) %>"><a href="/my_interviews">My Interviews</a></li>
                        <% end %>
                    </ul>
                    <% if signed_in? %>
                    <%= link_to 'Sign out', destroy_user_session_path, method: "delete", class: "pull-right"%></li>
                    <% else %>
                    <%= link_to "Sign in with LinkedIn", user_omniauth_authorize_path(:linkedin), class: "pull-right" %>
                    <% end %>
                </div>
            </div>
            
        </div>

        <div class="container">
            <%= yield %>
        </div>

