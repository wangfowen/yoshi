        <![endif]-->

        <header>
            <ul class="menu">
                <li><a class="<%= 'active' if current_page?(root_path) %>" href="/">Unfilled Posts</a></li>
                <% if signed_in? %>
                <li><a class="<%= 'active' if current_page?(my_posts_path) %>" href="/my_posts">My Posts</a></li>
                <li><a class="<%= 'active' if current_page?(my_interviews_path) %>" href="/my_interviews">My Interviews</a></li>
                <%= link_to 'Sign out', destroy_user_session_path, method: "delete" %></li>
                <% else %>
                <%= link_to "Sign in with LinkedIn", user_omniauth_authorize_path(:linkedin) %>
                <% end %>
            </ul>
        </header>

        <div class="container">
            <div class="row">
                <div class="span4" id="logo">
                    <div class="logo"></div>
                </div>
                <div class="span8" id="main">
                    <%= yield %>
                </div>
            </div>
        </div>

